<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPreview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarCamera">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imgCaptured"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTimeOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="#80000000"
            android:padding="6dp"
            android:textColor="@color/locket_yellow"
            android:textStyle="bold"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvLocationOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            android:background="#80000000"
            android:padding="6dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:visibility="gone"/>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_gray"
            android:src="@drawable/ic_person"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddFriend"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:backgroundTint="#2C2C2C"
            android:text="Add a Friend"
            android:textColor="@color/white"
            app:cornerRadius="22dp"
            app:icon="@drawable/ic_person"
            app:iconTint="@color/white"
            app:layout_constraintEnd_toStartOf="@id/btnChat"
            app:layout_constraintStart_toEndOf="@id/btnProfile"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_circle_gray"
            android:src="@drawable/ic_chat"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layoutCameraBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="40dp"
        app:layout_constraintBottom_toTopOf="@id/btnHistory"
        app:layout_constraintTop_toBottomOf="@id/cardPreview">

        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_flash_on"
            app:tint="@color/white" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <View
            android:id="@+id/btnCapture"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_capture_button" />

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnFlipCamera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_flip_camera"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_history"
            app:tint="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupCameraUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="toolbarCamera,layoutCameraBottom,btnHistory" />


    <ImageButton
        android:id="@+id/btnCloseReview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_circle_gray"
        android:src="@drawable/ic_close"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/layoutToggles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardPreview">

        <ImageButton
            android:id="@+id/btnToggleTime"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_schedule"
            app:tint="@color/gray" />

        <ImageButton
            android:id="@+id/btnToggleLocation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_location_on"
            app:tint="@color/gray" />
    </LinearLayout>

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:hint="Add a message..."
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layoutToggles" />

    <ImageButton
        android:id="@+id/btnSend"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/bg_send_button"
        android:src="@drawable/ic_arrow_back"
        android:rotation="90"
        android:padding="20dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/black" />
    <ProgressBar
        android:id="@+id/progressSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/black"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/btnSend"
        app:layout_constraintEnd_toEndOf="@id/btnSend"
        app:layout_constraintStart_toStartOf="@id/btnSend"
        app:layout_constraintTop_toTopOf="@id/btnSend"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/groupReviewUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="btnCloseReview,layoutToggles,etMessage,btnSend" />

</androidx.constraintlayout.widget.ConstraintLayout>